<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= title %>
        </title>
        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    </head>

    <body>
        <h1>
            <%= category.name %> Instruments
                <a href="/categories/edit/<%= category.id %>">Edit category</a>
                <a href="/categories/delete/<%= category.id %>">Delete category</a>
        </h1>

        <ul>
            <% instruments.forEach(instrument=> { %>
                <li>
                    <%= instrument.name %> - <%= instrument.brand %> (Quantity: <%= instrument.quantity %>) - $<%=
                                    instrument.price %>
                                    <a href="/instruments/edit/<%= instrument.id %>">[Edit]</a>
                                    <a href="/instruments/delete/<%= instrument.id %>"
                                        onclick="return confirm('Are you sure you want to delete this instrument?')">[Delete]</a>
                </li>
                <% }) %>
        </ul>
        <a href="/instruments/new/<%= category.id %>">Add Instrument</a>
    </body>

</html>