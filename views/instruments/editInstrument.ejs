<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= title %>
        </title>
        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    </head>

    <body>
        <h1>Edit Instrument</h1>

        <% if (errors && errors.length> 0) { %>
            <div style="color: red;">
                <ul>
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }); %>
                </ul>
            </div>
            <% } %>

                <form action="/instruments/edit/<%= instrument.id %>" method="post">
                    <label for="name">Instrument Name:</label>
                    <input type="text" id="name" name="name" value="<%= instrument.name %>" required>
                    <br>

                    <label for="category_id">Category:</label>
                    <select id="category_id" name="category_id" required>
                        <% categories.forEach(category=> { %>
                            <option value="<%= category.id %>" <%=instrument.category_id==category.id ? 'selected' : ''
                                %>>
                                <%= category.name %>
                            </option>
                            <% }); %>
                    </select>
                    <br>

                    <label for="price">Price:</label>
                    <input type="number" step="0.01" id="price" name="price" value="<%= instrument.price %>" required>
                    <br>

                    <label for="brand">Brand:</label>
                    <input type="text" id="brand" name="brand" value="<%= instrument.brand %>" required>
                    <br>

                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" value="<%= instrument.quantity %>" required>
                    <br>

                    <button type="submit">Update Instrument</button>
                    <a href="/categories/<%= instrument.category_id %>">Cancel</a>
                </form>
    </body>

</html>